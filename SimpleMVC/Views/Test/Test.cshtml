
@{
    ViewBag.Title = "Test";
    Layout = "~/Views/Shared/_Layout_test.cshtml";
}

@section styles{
    <!-- DataTables -->
    <link rel="stylesheet" href="/plugins/datatables/dataTables.bootstrap.css">
    <style>
        .headimage {
            width: 70px;
            height: 70px;
        }

        .table tr > td {
            vertical-align: middle;
        }
    </style>
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        测试页面主标题
        <small>测试页面副标题</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>测试模块</a></li>
        <li class="active">测试首页</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Title</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
                <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fa fa-times"></i>
                </button>
            </div>
        </div>
        <div class="box-body">
            <table id="example2" class="table table-hover">
                <thead>
                    <tr>
                        <th>头像</th>
                        <th>昵称</th>
                        <th>邮箱</th>
                        <th>手机号</th>
                        <th>生日</th>
                        <th>性别</th>
                        <th>注册时间</th>
                        <th>操作</th>
                    </tr>
                </thead>

            </table>
        </div>
        <div class="box-footer">
            Footer
        </div>
        <!-- /.box-footer-->
    </div>
    <!-- /.box -->

</section>
<!-- /.content -->

@section scripts{
    <!-- DataTables -->
    <script src="/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="/plugins/datatables/dataTables.bootstrap.min.js"></script>
    <script>
        $(function () {
            $('#example2').DataTable({
                "paging": true,
                "lengthChange": false,
                "searching": false,
                "ordering": true,
                "info": true,
                "autoWidth": true,
                "serverSide": true,
                "columns": [
                    { "data": "HeadImage", "render": function (data, type, row) { return '<img class="headimage" src="' + data + '"/>'; } },
                    { "data": "NickName" },
                    { "data": "UserName" },
                    { "data": "UserName" },
                    { "data": "Birthday" },
                    { "data": "Gender" },
                    { "data": "RegistTime" },
                    { "data": "Id", "render": function (data, type, row) { return '$' + data; } }
                ],
                "ajax": {
                    url: '/Test/GetUserList',
                    data: function (d) {
                        return {
                            "page": d.start / d.length + 1,
                            "pagesize": d.length
                        }
                    },
                    dataFilter: function (data) {
                        var json = jQuery.parseJSON(data);
                        json.recordsTotal = json.data.total;
                        json.recordsFiltered = json.data.total;
                        json.data = json.data.list;

                        return JSON.stringify(json); // return JSON string
                    }
                }
            });
        });
    </script>
}