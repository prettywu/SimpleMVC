
@{
    ViewBag.Title = "Test";
    Layout = "~/Views/Shared/_Layout_test.cshtml";
}

@section styles{
    <!-- DataTables -->
    <link rel="stylesheet" href="/plugins/datatables/dataTables.bootstrap.css">
    <!-- Daterange picker -->
    <link rel="stylesheet" href="/plugins/daterangepicker/daterangepicker.css">
    <style>
        .headimage {
            width: 50px;
            height: 50px;
        }

        .table tr > td {
            vertical-align: middle !important;
        }

        .dataTables_length {
            float: left;
        }

        #btn-search,#btn-refresh,#btn-add{
            margin-top:25px;
        }
    </style>
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        测试页面主标题
        <small>测试页面副标题</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>测试模块</a></li>
        <li class="active">测试首页</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="box">
        <div class="box-body">
            <div class="box box-widget">
                <div class="box-header with-border">
                    <h3 class="box-title">用户列表</h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                    </div>
                    <!-- /.box-tools -->
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="row">
                        <div class="col-xs-2">
                            <label for="exampleInputEmail1">昵称</label>
                            <input type="email" class="form-control input-sm" id="exampleInputEmail1" placeholder="昵称">
                        </div>
                        <div class="col-sm-2">
                            <label for="exampleInputEmail1">邮箱</label>
                            <input type="email" class="form-control input-sm " id="exampleInputEmail1" placeholder="昵称">
                        </div>
                        <div class="col-md-1">
                            <label for="exampleInputEmail1">手机号</label>
                            <input type="email" class="form-control  input-sm" id="exampleInputEmail1" placeholder="昵称">
                        </div>
                        <div class="col-lg-1">
                            <label for="exampleInputEmail1">性别</label>
                            <select class="form-control input-sm">
                                <option>男</option>
                                <option>女</option>
                            </select>
                        </div>
                        <div class="col-sm-2">
                            <label for="exampleInputEmail1">生日</label>
                            <div class="input-group">
                                <div class="input-group-addon input-group-sm">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <input type="text" class="form-control input-sm pull-right" id="reservation">
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <label >注册时间</label>
                            <div class="input-group">
                                <div class="input-group-addon input-group-sm">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <input type="text" class="form-control input-sm pull-right" id="reservation2">
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <button type="button" class="btn btn-info btn-sm" id="btn-search">搜索</button>
                            <button type="button" class="btn btn-info btn-sm" id="btn-refresh" title="刷新"><i class="fa fa-refresh"></i></button>
                            <button type="button" class="btn btn-success btn-sm" id="btn-add" title="添加用户"><i class="fa fa-plus"></i></button>
                        </div>
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
            <table id="example2" class="table table-hover">
                <thead>
                    <tr>
                        <th>头像</th>
                        <th>昵称</th>
                        <th>邮箱</th>
                        <th>手机号</th>
                        <th>生日</th>
                        <th>性别</th>
                        <th>注册时间</th>
                        <th>操作</th>
                    </tr>
                </thead>

            </table>
        </div>
        <div class="box-footer">
            Footer
        </div>
        <!-- /.box-footer-->
    </div>
    <!-- /.box -->

</section>
<!-- /.content -->

@section scripts{
    <!-- DataTables -->
    <script src="/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="/plugins/datatables/dataTables.bootstrap.min.js"></script>
    <!-- daterangepicker -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.11.2/moment.min.js"></script>
    <script src="/plugins/daterangepicker/daterangepicker.js"></script>
    <script>
        $(function () {
            //Date range picker
            $('#reservation').daterangepicker();
            $('#reservation2').daterangepicker();
            $('#example2').DataTable({
                "paging": true,
                "lengthChange": true,
                "searching": false,
                "ordering": true,
                "order": [[6, 'desc']],
                "info": false,
                "autoWidth": true,
                "stateSave": false,
                "serverSide": true,
                "dom": 'tlp',
                "columns": [
                    { "data": "HeadImage", "orderable": false, "render": function (data, type, row) { return '<img class="headimage" src="' + data + '"/>'; } },
                    { "data": "NickName", "orderable": false },
                    { "data": "UserName", "orderable": false },
                    { "data": "UserName" },
                    { "data": "Birthday" },
                    { "data": "Gender" },
                    { "data": "RegistTime" },
                    { "data": "Id", "orderable": false, "render": renderOption }
                ],
                "ajax": {
                    url: '/Test/GetUserList',
                    data: function (d) {
                        return {
                            "page": d.start / d.length + 1,
                            "pagesize": d.length
                        }
                    },
                    dataFilter: function (data) {
                        var json = jQuery.parseJSON(data);
                        json.recordsTotal = json.data.total;
                        json.recordsFiltered = json.data.total;
                        json.data = json.data.list;

                        return JSON.stringify(json); // return JSON string
                    }
                },
                "pagingType": "full_numbers",
                "language": {
                    "paginate": {
                        "first": "首页",
                        "last": "末页",
                        "previous": "上一页",
                        "next": "下一页"
                    }
                }
            });
        });

        function renderOption(data, type, row) {
            var ele = '<button type="button" class="btn btn-primary btn-xs">Primary</button><button type="button" class="btn btn-danger btn-xs">Danger</button>';
            return ele;
        }
    </script>
}