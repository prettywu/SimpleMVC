
@{
    ViewBag.Title = "Test";
    Layout = "~/Views/Shared/_Layout_test.cshtml";
}

@section styles{
    <!-- iCheck -->
    <link rel="stylesheet" href="/plugins/iCheck/flat/green.css">
    <!-- DataTables -->
    <link rel="stylesheet" href="/plugins/datatables/dataTables.bootstrap.css">
    <!-- Daterange picker -->
    <link rel="stylesheet" href="/plugins/daterangepicker/daterangepicker.css">
    <!-- Date Picker -->
    <link rel="stylesheet" href="/plugins/datepicker/datepicker3.css">
    <link href="~/dist/css/bootstrapValidator.min.css" rel="stylesheet" />
    <style>
        .box-body > .box-widget {
            margin-bottom: 0;
        }

        .headimage {
            width: 50px;
            height: 50px;
        }

        .table tr > th {
            text-align: center;
        }

        .table tr > td {
            vertical-align: middle !important;
            text-align:center;
        }

        .dataTables_length {
            float: left;
        }

        #btn-search, #btn-refresh, #btn-add {
            margin-top: 25px;
        }

        .radio-gender {
            vertical-align: middle;
            font-size: 16px;
            font-weight: bold;
            line-height: 34px;
        }

        #img-head {
            width: 120px;
            height: 120px;
        }
    </style>
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        测试页面主标题
        <small>测试页面副标题</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>测试模块</a></li>
        <li class="active">测试首页</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="box">
        <div class="box-body">
            <div class="box box-widget">
                <div class="box-header with-border">
                    <h3 class="box-title">用户列表</h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                    </div>
                    <!-- /.box-tools -->
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="row">
                        <div class="col-xs-2 col-sm-2 col-md-2">
                            <label for="search_nickname">昵称</label>
                            <input type="text" class="form-control input-sm" id="search_nickname" placeholder="昵称">
                        </div>
                        <div class="col-xs-2 col-sm-2 col-md-2">
                            <label for="search_email">邮箱</label>
                            <input type="text" class="form-control input-sm " id="search_email" placeholder="邮箱">
                        </div>
                        <div class="col-xs-2 col-sm-2 col-md-2">
                            <label for="search_phone">手机号</label>
                            <input type="text" class="form-control  input-sm" id="search_phone" placeholder="手机号">
                        </div>
                        <div class="col-xs-2 col-sm-2 col-md-2">
                            <label for="search_gender">性别</label>
                            <select class="form-control input-sm" id="search_gender">
                                <option>男</option>
                                <option>女</option>
                            </select>
                        </div>
                        <div class="col-xs-2 col-sm-2 col-md-2">
                            <label for="search_birthday">生日</label>
                            <div class="input-group">
                                <div class="input-group-addon input-group-sm">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <input type="text" class="form-control input-sm pull-right" id="search_birthday">
                            </div>
                        </div>
                        <div class="col-xs-2 col-sm-2 col-md-2">
                            <label for="search_registtime">注册时间</label>
                            <div class="input-group">
                                <div class="input-group-addon input-group-sm">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <input type="text" class="form-control input-sm pull-right" id="search_registtime">
                            </div>
                        </div>
                        <div class="col-xs-2 col-sm-2 col-md-2">
                            <label for="search_role">角色</label>
                            <select class="form-control input-sm" id="search_role">
                                <option value="1">超级管理员</option>
                                <option value="2">管理员</option>
                                <option value="3">总经理</option>
                                <option value="4">经理</option>
                                <option value="5">客服</option>
                            </select>
                        </div>
                        <div class="col-xs-2 col-sm-2 col-md-2">
                            <label for="search_state">状态</label>
                            <select class="form-control input-sm" id="search_state">
                                <option value="0">未审核</option>
                                <option value="1">正常</option>
                                <option value="2">冻结</option>
                                <option value="10">未通过</option>
                            </select>
                        </div>
                        <div class="col-xs-2 col-sm-2 col-md-2">
                            <button type="button" class="btn btn-info btn-sm" id="btn-search" title="搜索">搜索</button>
                            <button type="button" class="btn btn-info btn-sm" id="btn-refresh" title="刷新"><i class="fa fa-refresh"></i></button>
                            <button type="button" class="btn btn-success btn-sm" data-toggle="modal" data-target="#myModal" id="btn-add" title="添加用户"><i class="fa fa-plus"></i></button>
                        </div>
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
            <table id="example2" class="table table-hover">
                <thead>
                    <tr>
                        <th>头像</th>
                        <th>昵称</th>
                        <th>邮箱</th>
                        <th>手机号</th>
                        <th>角色</th>
                        <th>生日</th>
                        <th>性别</th>
                        <th>注册时间</th>
                        <th>状态</th>
                        <th>操作</th>
                    </tr>
                </thead>

            </table>
        </div>
        <div class="box-footer">
            Footer
        </div>
        <!-- /.box-footer-->
    </div>
    <!-- /.box -->
    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" data-backdrop="false">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h5 class="modal-title" id="myModalLabel"><i class="fa  fa-user-plus"></i> 添加用户</h5>
                </div>
                <div class="modal-body">
                    <div class="form-horizontal adduser_form">
                        <div class="box-body">
                            <div class="form-group">
                                <label for="email" class="col-sm-2 control-label">Email</label>
                                <div class="col-sm-10">
                                    <input type="email" class="form-control" id="email" name="email" placeholder="Email">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="nickname" class="col-sm-2 control-label">昵称</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="nickname" name="nickname" placeholder="昵称">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="headimage" class="col-sm-2 control-label">头像</label>
                                <div class="col-sm-4">
                                    <img class="img-rounded" id="img-head" src="http://p1.qqyou.com/touxiang/UploadPic/2014-5/23/2014052311412225651.jpg" />
                                    <input type="hidden" id="headimage" name="headimage" value="" />
                                </div>
                                <div class="col-sm-6">
                                    <form id="imgupload">
                                        <input type="file" id="file_headimage" name="file">
                                    </form>
                                    <p class="help-block" id="upload_info">点击选择并上传文件.</p>
                                </div>
                                <div class="col-sm-6 headimage-valid">

                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">性别</label>
                                <div class="col-sm-2">
                                    <input type="radio" class="iradio" name="gender" checked value="1">&nbsp;
                                    <i class="radio-gender fa fa-mars"></i>
                                </div>
                                <div class="col-sm-2">
                                    <input type="radio" class="iradio" name="gender" value="2">&nbsp;
                                    <i class="radio-gender fa fa-venus"></i>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="birthday" class="col-sm-2 control-label">生日</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" id="birthday" name="birthday" placeholder="生日">
                                </div>
                            </div>
                        </div>
                        <!-- /.box-body -->
                        @*<div class="box-footer">
                                <button type="submit" class="btn btn-default">Cancel</button>
                                <button type="submit" class="btn btn-info pull-right">Sign in</button>
                            </div>*@
                        <!-- /.box-footer -->
                    </div>
                </div>
                <div class="modal-footer">
                    <span class="text-muted">添加账户的默认密码为邮箱账号</span>
                    <button type="button" class="btn btn-default cancel-adduser" data-dismiss="modal">取消</button>
                    <button type="button" class="btn btn-success" onclick="AddUser()">添加</button>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="frozenModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" data-backdrop="false">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel"><i class="fa fa-warning text-yellow"></i> 提示</h4>
                </div>
                <div class="modal-body">
                    <span id="modal-text"></span>
                    <input type="hidden" id="frozenId" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default cancel-frozen" data-dismiss="modal">取消</button>
                    <button type="button" class="btn btn-danger" id="btn-frozen" onclick="FrozenUser">冻结</button>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- /.content -->

@section scripts{
    <!-- DataTables -->
    <script src="/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="/plugins/datatables/dataTables.bootstrap.min.js"></script>
    <!-- daterangepicker -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.11.2/moment.min.js"></script>
    <script src="/plugins/daterangepicker/daterangepicker.js"></script>
    <!-- datepicker -->
    <script src="/plugins/datepicker/bootstrap-datepicker.js"></script>
    <!-- iCheck 1.0.1 -->
    <script src="/plugins/iCheck/icheck.min.js"></script>
    <script src="~/dist/js/bootstrapValidator.js"></script>
    <script>
        $(function () {
            var now = new Date();
            var end = now.formateString('yyyy-MM-dd');

            now.setMonth(now.getMonth() - 1)
            var start = now.formateString('yyyy-MM-dd');
            
            //Date range picker
            $('#search_registtime').daterangepicker({
                startDate: start,
                endDate:end,
                separator: '~',
                locale: {
                    format: 'YYYY-MM-DD',
                    daysOfWeek: ['日', '一', '二', '三', '四', '五', '六'],
                    monthNames: ['一月', '二月', '三月', '四月', '五月', '六月', '七月', '八月', '九月', '十月', '十一月', '十二月'],
                },
            });
            $('#birthday').datepicker({ 'format': 'yyyy-mm-dd' });
            $('#search_birthday').datepicker({ 'format': 'yyyy-mm-dd'}).on('changeDate', function (e) {
                $(".adduser_form").data('bootstrapValidator').updateStatus('birthday', 'NOT_VALIDATED', null).validateField('birthday');
            });
            $('input.iradio').iCheck({
                radioClass: 'iradio_flat-green'
            });
            $('#example2').DataTable({
                "paging": true,
                "lengthChange": true,
                "lengthMenu": [5, 10, 25, 50],
                "searching": false,
                "ordering": true,
                "order": [[7, 'desc']],
                "info": false,
                "autoWidth": true,
                "stateSave": false,
                "serverSide": true,
                "dom": 'tlp',
                "columns": [
                    { "data": "HeadImage" },
                    { "data": "NickName" },
                    { "data": "UserName" },
                    { "data": "Phone" },
                    { "data": "Role" },
                    { "data": "Birthday" },
                    { "data": "Gender" },
                    { "data": "RegistTime" },
                    { "data": "State" },
                    { "data": "Id"}
                ],
                "columnDefs": [
                    { "targets": [0, 1, 2,4, 9], "orderable": false },
                    { "targets": [0], "render": function (data, type, row) { return '<img class="headimage" src="' + data + '"/>'; } },
                     { "targets": [4], "render": renderRole },
                    { "targets": [9], "render": renderOption }
                ],
                "ajax": {
                    url: '/Test/GetUserList',
                    data: function (d) {
                        var sortname = "RegistTime";
                        var sorttype = 0;
                        if (d.order && d.order.length > 0) {
                            sortname = d.columns[d.order[0].column].data;
                            sorttype = d.order[0].dir == "desc" ? 0 : 1;
                        }
                        return {
                            "sortname": sortname,
                            "sorttype": sorttype,
                            "page": d.start / d.length + 1,
                            "pagesize": d.length
                        }
                    },
                    dataFilter: function (data) {
                        var json = jQuery.parseJSON(data);
                        json.recordsTotal = json.data.total;
                        json.recordsFiltered = json.data.total;
                        json.data = json.data.list;

                        return JSON.stringify(json); // return JSON string
                    }
                },
                "pagingType": "full_numbers",
                "language": {
                    "paginate": {
                        "first": "首页",
                        "last": "末页",
                        "previous": "上一页",
                        "next": "下一页"
                    }
                }
            });
            $('#file_headimage').change(function () {
                doUpload();
            });
            $('.adduser_form').bootstrapValidator({
                message: 'This value is not valid',
                live: 'enabled',
                feedbackIcons: {
                    valid: 'glyphicon glyphicon-ok',
                    invalid: 'glyphicon glyphicon-remove',
                    validating: 'glyphicon glyphicon-refresh'
                },
                excluded: [":disabled"],
                fields: {
                    email: {
                        validators: {
                            notEmpty: {
                                message: '邮箱地址不能为空'
                            }
                        }
                    },
                    nickname: {
                        validators: {
                            notEmpty: {
                                message: '昵称不能为空'
                            }
                        }
                    },
                    headimage: {
                        //container: '.headimage-valid',
                        validators: {
                            notEmpty: {
                                message: '还未上传图片'
                            }
                        }
                    },
                    birthday: {
                        validators: {
                            notEmpty: {
                                message: '生日不能为空'
                            }
                        }
                    }

                }
            });
            $(".cancel-adduser").click(function () {
                $(".adduser_form").data('bootstrapValidator').resetForm();
            });
            $('#btn-refresh').click(function () { $('#example2').DataTable().ajax.reload(null, false); });
            $('#btn-search').click(function () {
                var nickname = $("#search_nickname").val();
                var email = $("#search_email").val();
                var phone = $("#search_phone").val();
                var role = $("#search_role").val();
                var gender = $("#search_gender").val();
                var birthday = $("#search_birthday").val();
                var registtime = $("#search_registtime").val();
                var state = $("#search_state").val();
                var searchUrl = '/Test/GetUserList';
                searchUrl = searchUrl + '?email=' + email + '&nickname=' + nickname + '&birthday=' + birthday + '&phone=' + phone + '&role=' + role +'&state='+state+ '&gender=' + gender + '&registtimerange=' + registtime;
                $('#example2').DataTable().ajax.url(searchUrl).load();
            });
        });
        function renderRole(data, type, row) {
            var roles = "";
            for (var i = 0; i < data.length; i++) {
                if (roles == "")
                    roles += data[i];
                else
                    roles += "," + data[i];
            }
            return roles;
        }
        function renderOption(data, type, row) {
            var userid = data;
            var nickname = row.NickName;
            var ele = '<button type="button" class="btn btn-primary btn-xs">修改</button> <button type="button" class="btn btn-danger btn-xs" onclick="FrozenAleart(\'' + userid + '\',\'' + nickname + '\')">冻结</button>';
            return ele;
        }
        function FrozenAleart(userid, nickname) {
            $("#modal-text").text('确定要冻结用户 ' + nickname + ' 吗？');
            $("#frozenId").val(userid);
            $("#frozenModal").modal("show");
        }
        function FrozenUser() {
            $("#btn-frozen").addClass("disabled");
        }
        function doUpload() {
            $("#headimage").val("");
            $("#img-head").attr("src", "");
            var formData = new FormData($("#imgupload")[0]);
            $.ajax({
                url: '/Test/FileUpload',
                type: 'POST',
                data: formData,
                async: false,
                cache: false,
                contentType: false,
                dataType: 'json',
                processData: false,
                success: function (returndata) {
                    if (returndata && returndata.isSuccess) {
                        $("#imgupload").parent().attr("class", "col-sm-6 has-success");
                        $("#upload_info").text(returndata.message);

                        $("#headimage").val(returndata.data);
                        $("#img-head").attr("src", returndata.data);


                    }
                    else {
                        $("#imgupload").parent().attr("class", "col-sm-6 has-error");
                        $("#upload_info").text(returndata.message);

                    }
                    $(".adduser_form").data('bootstrapValidator').updateStatus('headimage', 'NOT_VALIDATED', null).validateField('headimage');
                },
                error: function (returndata) {
                    $("#imgupload").parent().attr("class", "col-sm-6 has-warning");
                    $("#upload_info").text(returndata.message);
                }
            });
        }
        function AddUser() {
            var bootstrapValidator = $(".adduser_form").data('bootstrapValidator');
            bootstrapValidator.validate();
            if (bootstrapValidator.isValid()) {
                var email = $("#email").val();
                var nickname = $("#nickname").val();
                var headimage = $("#headimage").val();
                var gender = $('input[name="gender"]:checked').val();
                var birthday = $("#birthday").val();

                $.ajax({
                    url: '/Test/AddUser',
                    method: 'post',
                    dataType: 'json',
                    data: { email: email, nickname: nickname, headimage: headimage, gender: gender, birthday: birthday },
                    success: function (result) {
                        if (result && result.isSuccess) {
                            reSetAddform();
                            $("#myModal").modal("hide");

                            $('#example2').DataTable().ajax.reload();
                        }
                        else {
                            console.log('添加用户失败-' + result.message);
                        }
                    },
                    error: function (e) {
                        alert('系统错误');
                    }
                })
            }
        }
        function reSetAddform() {
            $("#email").val('');
            $("#nickname").val('');
            $("#headimage").val('');
            $('input[name="gender"]:checked').val('');
            $("#birthday").val('');

            $('#birthday').datepicker('clearDates');

            $("#imgupload").parent().attr("class", "col-sm-6");
            $("#file_headimage").val('');
            $("#upload_info").text("点击选择并上传文件.");

            $(".adduser_form").data('bootstrapValidator').resetForm();
        }

    </script>
}