
@{
    ViewBag.Title = "Test";
    Layout = "~/Views/Shared/_Layout_test.cshtml";
}

@section styles{
    <!-- iCheck -->
    <link rel="stylesheet" href="/plugins/iCheck/flat/green.css">
    <!-- DataTables -->
    <link rel="stylesheet" href="/plugins/datatables/dataTables.bootstrap.css">
    <!-- Daterange picker -->
    <link rel="stylesheet" href="/plugins/daterangepicker/daterangepicker.css">
    <!-- Date Picker -->
    <link rel="stylesheet" href="/plugins/datepicker/datepicker3.css">
    <style>
        .box-body > .box-widget {
            margin-bottom: 0;
        }

        .headimage {
            width: 50px;
            height: 50px;
        }

        .table tr > th {
            text-align: center;
        }

        .table tr > td {
            vertical-align: middle !important;
        }

        .dataTables_length {
            float: left;
        }

        #btn-search, #btn-refresh, #btn-add {
            margin-top: 25px;
        }

        .radio-gender {
            vertical-align: middle;
            font-size: 16px;
            font-weight: bold;
            line-height: 34px;
        }
    </style>
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        测试页面主标题
        <small>测试页面副标题</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>测试模块</a></li>
        <li class="active">测试首页</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="box">
        <div class="box-body">
            <div class="box box-widget">
                <div class="box-header with-border">
                    <h3 class="box-title">用户列表</h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                    </div>
                    <!-- /.box-tools -->
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="row">
                        <div class="col-xs-2">
                            <label for="exampleInputEmail1">昵称</label>
                            <input type="email" class="form-control input-sm" id="exampleInputEmail1" placeholder="昵称">
                        </div>
                        <div class="col-sm-2">
                            <label for="exampleInputEmail1">邮箱</label>
                            <input type="email" class="form-control input-sm " id="exampleInputEmail1" placeholder="昵称">
                        </div>
                        <div class="col-md-1">
                            <label for="exampleInputEmail1">手机号</label>
                            <input type="email" class="form-control  input-sm" id="exampleInputEmail1" placeholder="昵称">
                        </div>
                        <div class="col-lg-1">
                            <label for="exampleInputEmail1">性别</label>
                            <select class="form-control input-sm">
                                <option>男</option>
                                <option>女</option>
                            </select>
                        </div>
                        <div class="col-sm-2">
                            <label for="exampleInputEmail1">生日</label>
                            <div class="input-group">
                                <div class="input-group-addon input-group-sm">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <input type="text" class="form-control input-sm pull-right" id="reservation">
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <label>注册时间</label>
                            <div class="input-group">
                                <div class="input-group-addon input-group-sm">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <input type="text" class="form-control input-sm pull-right" id="reservation2">
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <button type="button" class="btn btn-info btn-sm" id="btn-search">搜索</button>
                            <button type="button" class="btn btn-info btn-sm" id="btn-refresh" title="刷新"><i class="fa fa-refresh"></i></button>
                            <button type="button" class="btn btn-success btn-sm" data-toggle="modal" data-target="#myModal" id="btn-add" title="添加用户"><i class="fa fa-plus"></i></button>
                        </div>
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
            <table id="example2" class="table table-hover">
                <thead>
                    <tr>
                        <th>头像</th>
                        <th>昵称</th>
                        <th>邮箱</th>
                        <th>手机号</th>
                        <th>生日</th>
                        <th>性别</th>
                        <th>注册时间</th>
                        <th>状态</th>
                        <th>操作</th>
                    </tr>
                </thead>

            </table>
        </div>
        <div class="box-footer">
            Footer
        </div>
        <!-- /.box-footer-->
    </div>
    <!-- /.box -->
    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" data-backdrop="false">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h5 class="modal-title" id="myModalLabel"><i class="fa  fa-user-plus"></i> 添加用户</h5>
                </div>
                <div class="modal-body">
                    <form class="form-horizontal">
                        <div class="box-body">
                            <div class="form-group">
                                <label for="email" class="col-sm-2 control-label">Email</label>
                                <div class="col-sm-10">
                                    <input type="email" class="form-control" id="email" placeholder="Email">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="nickname" class="col-sm-2 control-label">昵称</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="nickname" placeholder="昵称">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">性别</label>
                                <div class="col-sm-2">
                                    <input type="radio" class="iradio" name="gender" checked>&nbsp;
                                    <i class="radio-gender fa fa-mars"></i>
                                </div>
                                <div class="col-sm-2">
                                    <input type="radio" class="iradio" name="gender">&nbsp;
                                    <i class="radio-gender fa fa-venus"></i>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="birthday" class="col-sm-2 control-label">生日</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" id="birthday" placeholder="生日">
                                </div>
                            </div>
                        </div>
                        <!-- /.box-body -->
                        @*<div class="box-footer">
                                <button type="submit" class="btn btn-default">Cancel</button>
                                <button type="submit" class="btn btn-info pull-right">Sign in</button>
                            </div>*@
                        <!-- /.box-footer -->
                    </form>
                </div>
                <div class="modal-footer">
                    <span class="text-muted">添加账户的默认密码为528888</span>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="frozenModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" data-backdrop="false">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h3 class="modal-title" id="myModalLabel"><i class="fa fa-warning text-yellow"></i> 提示</h3>
                </div>
                <div class="modal-body">
                    <span id="modal-text"></span>
                    <input type="hidden" id="frozenId" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
                    <button type="button" class="btn btn-danger" id="btn-frozen" onclick="FrozenUser">冻结</button>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- /.content -->

@section scripts{
    <!-- DataTables -->
    <script src="/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="/plugins/datatables/dataTables.bootstrap.min.js"></script>
    <!-- daterangepicker -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.11.2/moment.min.js"></script>
    <script src="/plugins/daterangepicker/daterangepicker.js"></script>
    <!-- datepicker -->
    <script src="/plugins/datepicker/bootstrap-datepicker.js"></script>
    <!-- iCheck 1.0.1 -->
    <script src="/plugins/iCheck/icheck.min.js"></script>
    <script>
        $(function () {
            //Date range picker
            $('#reservation').daterangepicker();
            $('#reservation2').daterangepicker();
            $('#birthday').datepicker({'format':'yyyy-mm-dd'});
            $('input.iradio').iCheck({
                radioClass: 'iradio_flat-green'
            });
            $('#example2').DataTable({
                "paging": true,
                "lengthChange": true,
                "searching": false,
                "ordering": true,
                "order": [[6, 'desc']],
                "info": false,
                "autoWidth": true,
                "stateSave": false,
                "serverSide": true,
                "dom": 'tlp',
                "columns": [
                    { "data": "HeadImage", "orderable": false, "render": function (data, type, row) { return '<img class="headimage" src="' + data + '"/>'; } },
                    { "data": "NickName", "orderable": false },
                    { "data": "UserName", "orderable": false },
                    { "data": "UserName" },
                    { "data": "Birthday" },
                    { "data": "Gender" },
                    { "data": "RegistTime" },
                    { "data": "State" },
                    { "data": "Id", "orderable": false, "render": renderOption }
                ],
                "ajax": {
                    url: '/Test/GetUserList',
                    data: function (d) {
                        return {
                            "page": d.start / d.length + 1,
                            "pagesize": d.length
                        }
                    },
                    dataFilter: function (data) {
                        var json = jQuery.parseJSON(data);
                        json.recordsTotal = json.data.total;
                        json.recordsFiltered = json.data.total;
                        json.data = json.data.list;

                        return JSON.stringify(json); // return JSON string
                    }
                },
                "pagingType": "full_numbers",
                "language": {
                    "paginate": {
                        "first": "首页",
                        "last": "末页",
                        "previous": "上一页",
                        "next": "下一页"
                    }
                }
            });
        });

        function renderOption(data, type, row) {
            var userid = data;
            var nickname = row.NickName;
            var ele = '<button type="button" class="btn btn-primary btn-xs">修改</button> <button type="button" class="btn btn-danger btn-xs" onclick="FrozenAleart(\'' + userid + '\',\'' + nickname + '\')">冻结</button>';
            return ele;
        }
        function FrozenAleart(userid, nickname) {
            $("#modal-text").text('确定要冻结用户 ' + nickname + ' 吗？');
            $("#frozenId").val(userid);
            $("#frozenModal").modal("show");
        }
        function FrozenUser() {
            $("#btn-frozen").addClass("disabled");
        }
    </script>
}