
@{
    ViewBag.Title = "LawsuitAdd";
    Layout = "~/Views/Shared/_Layout_test.cshtml";
}

@section styles{
    <!-- bootstrap wysihtml5 - text editor -->
    <link rel="stylesheet" href="/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.min.css">
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        测试页面主标题
        <small>测试页面副标题</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>测试模块</a></li>
        <li class="active">测试首页</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Compose New Message</h3>
        </div>
        <div class="box-body">
            <form class="form-horizontal">
                <div class="form-group">
                    <label for="inputTitle" class="col-sm-2 control-label">标题</label>

                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inputTitle" placeholder="输入案件标题，不超过50个字">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputExperience" class="col-sm-2 control-label">详情</label>

                    <div class="col-sm-10">
                        <textarea class="form-control" id="inputExperience" placeholder="详细内容，不少于50个字" style="margin-top: 0px; margin-bottom: 0px; height: 350px;"></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputSkills" class="col-sm-2 control-label">听证员</label>
                    <div class="col-sm-10">
                        <div>
                            <button class="btn btn-primary">指定</button>
                            <button class="btn btn-success">随机</button>
                            <span class="help-block">最多添加5个听证员，可以指定选择专家听证员，或者由系统随机选定。</span>
                        </div>
                        <table class="table table-striped" id="table_hearing">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>角色</th>
                                    <th>用户名</th>
                                    <th>来源</th>
                                    <th>状态</th>
                                    <th>操作</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>1</td>
                                    <td>律师</td>
                                    <td>Jay White</td>
                                    <td>用户申请</td>
                                    <td>已通过</td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <td>2</td>
                                    <td>听证员</td>
                                    <td>Jay White</td>
                                    <td>系统随机</td>
                                    <td>已通过</td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <td>3</td>
                                    <td>受害人</td>
                                    <td>Jay White</td>
                                    <td>用户申请</td>
                                    <td>未审核</td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <td>4</td>
                                    <td>律师</td>
                                    <td>Jay White</td>
                                    <td>用户申请</td>
                                    <td>否决</td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <td>5</td>
                                    <td>行政主管机关</td>
                                    <td>Jay White</td>
                                    <td>用户申请</td>
                                    <td>已通过</td>
                                    <td></td>
                                </tr>
                            </tbody>
                        </table>

                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox"> I agree to the <a href="#">terms and conditions</a>
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-danger">Submit</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="box-footer">
            Footer
        </div>
        <!-- /.box-footer-->
    </div>
    <!-- /.box -->
</section>
<!-- /.content -->
